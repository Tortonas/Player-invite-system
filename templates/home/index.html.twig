{% extends 'base.html.twig' %}

{% block title %}Player invite system - Home{% endblock %}

{% block body %}

<div class="container mt-4">
    <div class="card mx-auto" style="width: 20rem;">
        <img class="card-img-top" src="https://steamcdn-a.akamaihd.net/steamcommunity/public/images/avatars/c0/c0ad5cb411d88fcc0234abfe65d475980a7e4376_full.jpg" alt="User steam picture">
        <div class="card-body">
            <h5 class="card-title">Random player name</h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">STEAM_1:0:174430120</li>
        </ul>
        <div class="card-body">
            <form method="POST">
                <a href="#" class="card-link"><button class="btn btn-primary btn-sm">Steam link</button></a>
